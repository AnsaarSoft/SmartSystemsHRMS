        padding-left: 20px;
    }

    .sign-in-card-mid {
        width: 80%;
    }

    .sign-in-card-bottom {
        width: 80%;
    }

    .sign-in-card-mid input {
        border: none;
        border-bottom: 2px solid #ccc;
        border-radius: 0;
        margin-top: 15px;
        height: 60px;
        padding: 10px;
        box-sizing: border-box;
        outline: none;
        width: 100%;
    }

        .sign-in-card-mid input:focus {
            border-bottom-color: purple;
        }

    .forgot-password {
        color: #007bff;
        text-decoration: none;
        font-size: 16px;
    }

    .gradient-button {
        background: linear-gradient(179.4deg, rgb(43, 51, 104) -16.9%, rgb(71, 30, 84) 119.9%);
        color: #fff;
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        cursor: pointer;
        width: 100%;
    }

        .gradient-button:hover {
            opacity: 0.9;
        }

</style>
