            font-size: 70px;
        }

        .app-info p {
            font-size: 25px;
            margin-left: -160px;
        }

    .app-title {
        display: flex;
        align-items: center;
    }

        .app-title img {
            margin-left: 50px;
            margin-top: -60px;
            margin-right: 10px;
        }

    .login {
        padding: 50px;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .sign-in-card {
        background: #fff;
        height: 90vh;
        width: 80vh;
        padding: 20px;
        border-radius: 15px;
