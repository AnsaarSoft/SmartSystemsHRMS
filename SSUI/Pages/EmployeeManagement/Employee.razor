@page "/employees"
@using System.Net.Http.Json
@using SSUI.Services.Interface.Administration
@inject HttpClient httpClient

<style>
    #dashboard-top {
        width: 100%;
        height: 30vh;
        margin-bottom: 10px;
        border-radius: 20px;
        padding: 15px;
        background: linear-gradient(179.4deg, rgb(10, 20, 69) -16.9%, rgb(50, 30, 84) 119.9%);
        overflow-y:scroll;
    }

    #dashboard-bottom {
        width: 100%;
        height: 50vh;
        border-radius: 20px;
        padding: 15px;
        background: linear-gradient(179.4deg, rgb(10, 20, 69) -16.9%, rgb(50, 30, 84) 119.9%);
    }

    #switch-fix {
        display: flex;
        margin-top: 15px;
    }

    .form-switch {
        margin-left: 20px;
    }

    #dashboard-bottom .mud-table {
        height: 100%;
        overflow-y: scroll;
        border-radius: 20px;
    }
</style>

<PageTitle>Employee Management</PageTitle>

<h1>Employees</h1>

<div id="dashboard-top">
    <EditForm Model="@formData" OnValidSubmit="@HandleSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <InputText id="EmployeeName" hidden @bind-Value="formData.Id" class="form-control" placeholder="CompanyName" />
        <div class="form-group">
            <div class="row">
                <div class="col-4">
                    <InputText id="CompanyName" @bind-Value="formData.FirstName" class="form-control" placeholder="First Name" />

                </div>
                <div class="col-4">
                    <InputText id="CompanyName" @bind-Value="formData.MiddleName" class="form-control" placeholder="Middle Name" />
                </div>
                <div class="col-4">
                    <InputText id="CompanyName" @bind-Value="formData.LastName" class="form-control" placeholder="Last Name" />
                </div>
            </div>
        </div>
        <br>
        <div class="form-group" style="margin-top: 7px">
            <div class="row">
                <div class="col-4" style="margin-top:-20px;">
                    <label style="color:white;">Date Of Birth</label>

                    <InputDate id="CompanyName" @bind-Value="formData.DOB" class="form-control" placeholder="Company Name" />
                </div>
                <div class="col-4" style="margin-top:-20px;">
                    <label style="color:white;">Joining Date</label>

                    <InputDate id="CompanyName" @bind-Value="formData.ServiceStartDate" class="form-control" placeholder="Alias" />
                </div>
                <div class="col-4" style="margin-top:-20px;">
                    <label style="color:white;">Confirmation Date</label>

                    <InputDate id="CompanyName" @bind-Value="formData.ConfirmationDate" class="form-control" placeholder="Alias" />
                </div>
            </div>
        </div>
        <br>
        <div class="form-group">
            <div class="row">
                <div class="col-4">
                    <InputText id="CompanyName" @bind-Value="formData.HomeAddress" class="form-control" placeholder="Home Address" />

                </div>
                <div class="col-4" >
                    <InputText id="CompanyName" @bind-Value="formData.HomePhoneNumber" class="form-control" placeholder="Home Phone Number" />
                </div>
                <div class="col-4">
                    <InputText id="CompanyName" @bind-Value="formData.HomeEmail" class="form-control" placeholder="Home Email" />
                </div>
            </div>
        </div>
        <br>
        <div class="form-group">
            <div class="row">
                <div class="col-4">
                    <InputText id="CompanyName" @bind-Value="formData.WorkAddress" class="form-control" placeholder="Work Address" />

                </div>
                <div class="col-4">
                    <InputText id="CompanyName" @bind-Value="formData.WorkPhoneNumber" class="form-control" placeholder="Work Phone Number" />
                </div>
                <div class="col-4">
                    <InputText id="CompanyName" @bind-Value="formData.WorkEmail" class="form-control" placeholder="Work Email" />
                </div>
            </div>
        </div>
        <br>
        <div class="form-group">
            <div class="row">
                <div class="col-3">
                    <InputText id="CompanyName" @bind-Value="formData.HomeCity" class="form-control" placeholder="Home City" />

                </div>
                <div class="col-3">
                    <InputText id="CompanyName" @bind-Value="formData.HomeCountry" class="form-control" placeholder="Home Country" />
                </div>
                <div class="col-3">
                    <InputText id="CompanyName" @bind-Value="formData.WorkCity" class="form-control" placeholder="Work City" />
                </div>
                <div class="col-3">
                    <InputText id="CompanyName" @bind-Value="formData.WorkCountry" class="form-control" placeholder="Work Country" />
                </div>
            </div>
        </div>
        <br>
        <div class="form-group">
            <div class="row">
                <div class="col-4">
                    <InputText id="CompanyName" @bind-Value="formData.FatherName" class="form-control" placeholder="Father Name" />

                </div>
                <div class="col-4">
                    <InputText id="Email" @bind-Value="formData.MotherName" class="form-control" placeholder="Mother Name" />
                </div>
                <div class="col-4">
                    <InputText id="Email" @bind-Value="formData.Title" class="form-control" placeholder="Title" />
                </div>
            </div>
        </div>
        <br>
        <div class="form-group" style="margin-top: 7px">
            <div class="row">
                <div class="col-4" style="margin-top:-20px;">
                    <label style="color:white;">ID</label>

                    <InputNumber id="CompanyName" @bind-Value="formData.EmployeeID" class="form-control" placeholder="ID" />
                </div>
                @* <div id="switch-fix" class="form-group">
                    <label class="form-check-label" for="flexSwitchCheckChecked" style="color:white;">Status</label>
                    <div class="form-group form-switch">
                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" @bind="formData.flgActive">
                    </div>

                </div> *@
                <div class="col-4" style="margin-top:-20px;">
                    <label style="color:white;">Service End Date</label>

                    <InputDate id="CompanyName" @bind-Value="formData.ServiceEndDate" class="form-control" placeholder="Alias" />
                </div>
            </div>
        </div>

        <div style="display:flex;">
            <div>
                <div id="switch-fix" class="form-group">
                    <label class="form-check-label" for="flexSwitchCheckChecked" style="color:white;">Status</label>
                    <div class="form-group form-switch">
                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" @bind="formData.flgActive">
                    </div>

                </div>
                <div class="d-flex justify-content-start mt-3">
                    <button type="button" class="btn btn-secondary mr-2" @onclick="ClearForm">Clear</button>
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </div>
            <div>
                <ValidationSummary />

            </div>
        </div>

    </EditForm>
</div>

<div id="dashboard-bottom" class="table-container">
    <MudTable Items="@Entities" Filter="new Func<vmEmployee,bool>(SearchFunction)" @bind-SelectedItem="SelectedEntity" Virtualize="true" FixedHeader="true" FixedFooter="true" Height="63%">
        <ToolBarContent>
            <MudText Typo="Typo.h6">Companies</MudText>
            <MudSpacer />
            <MudTextField @bind-Value="UserSearch" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
        </ToolBarContent>
        <HeaderContent>
            <MudTh>Actions</MudTh>
            <MudTh>Serial No.</MudTh>
            <MudTh>CompanyName</MudTh>
            <MudTh>Status</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Actions" Style="width:200px;">
                <button class="btn btn-success" @onclick="() => EditEmployee(context.Id)">Edit</button>
                <button class="btn btn-danger" @onclick="() => ConfirmDelete(context.Id)">Delete</button>
            </MudTd>
            <MudTd DataLabel="Serial No." Style="width:100px;">@(@Entities.IndexOf(context) + 1)</MudTd>
            <MudTd DataLabel="CompanyName">@context.FirstName</MudTd>
            <MudTd DataLabel="Status" Style="width:100px;">@context.flgActive</MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
</div>

<MudDialog @bind-IsVisible="@isDeleteDialogVisible">
    <DialogContent>
        <MudText Typo="Typo.h6">Delete Confirmation</MudText>
        <MudText>Are you sure you want to delete this Company?</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="DeleteEmployeeConfirmed">Yes</MudButton>
        <MudButton Color="Color.Secondary" OnClick="() => isDeleteDialogVisible = false">No</MudButton>
    </DialogActions>
</MudDialog>

@code {
    private vmEmployee formData = new vmEmployee();
    private bool isDeleteDialogVisible = false;
    private string CompanyIdToDelete;
    private string UserSearch = "";
    private vmEmployee SelectedEntity;
    private List<vmEmployee?> Entities = new List<vmEmployee>();

    [Inject]
    public IEmployee obj { get; set; }

    public Employee() { }
    public Employee(IEmployee obj)
    {
        this.obj = obj;
    }
    protected override async Task OnInitializedAsync()
    {
        Entities = await obj.ListEmployees();
    }

    private async void HandleSubmit()
    {
        if (string.IsNullOrEmpty(formData.Id))
        {
            formData.Id = "00000000-0000-0000-0000-000000000000";
        }
        var result = await obj.ModifyEmployee(formData);
        if (result != null)
        {
            ClearForm();
            Entities = await obj.ListEmployees();
            StateHasChanged();
        }
    }

    private async void EditEmployee(string Id)
    {
        var response = await obj.EditEmployee(Id);
        if (response != null)
        {
            formData.Id = response.Id;
            formData.FirstName = response.FirstName;
            formData.LastName = response.LastName;
            formData.MiddleName = response.MiddleName;
            formData.flgActive = response.flgActive;

            formData.HomeAddress = response.HomeAddress;
            formData.HomeEmail = response.HomeEmail;
            formData.HomeCity = response.HomeCity;
            formData.HomePhoneNumber = response.HomePhoneNumber;
            formData.HomeCountry = response.HomeCountry;

            formData.WorkAddress = response.WorkAddress;
            formData.WorkEmail = response.WorkEmail;
            formData.WorkCity = response.WorkCity;
            formData.WorkPhoneNumber = response.WorkPhoneNumber;
            formData.WorkCountry = response.WorkCountry;

            formData.MotherName = response.MotherName;
            formData.FatherName = response.FatherName;
            formData.DOB = response.DOB;
            formData.ConfirmationDate = response.ConfirmationDate;
            formData.ServiceStartDate = response.ServiceStartDate;
            formData.ServiceEndDate = response.ServiceEndDate;

            formData.Title = response.Title;
            formData.EmployeeID = response.EmployeeID;

            await InvokeAsync(StateHasChanged);
        }
    }
    private void ConfirmDelete(string Id)
    {
        CompanyIdToDelete = Id;
        isDeleteDialogVisible = true;
    }

    private async void DeleteEmployeeConfirmed()
    {
        isDeleteDialogVisible = false;
        var response = await obj.RemoveEmployee(CompanyIdToDelete);
        if (response == true)
        {
            ClearForm();
            var entities = await obj.ListEmployees();
            Entities = entities ?? new List<vmEmployee>();
            StateHasChanged();
        }
    }

    private void ClearForm()
    {
        formData = new vmEmployee();
    }

    private bool SearchFunction(vmEmployee element) => Search(element, UserSearch);

    private bool Search(vmEmployee element, string searchString)
    {
        if (string.IsNullOrWhiteSpace(searchString))
            return true;
        if (element.FirstName.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        return false;
    }
}
