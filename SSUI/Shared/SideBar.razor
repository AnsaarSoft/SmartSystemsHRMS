    .nav-bar-top-text {
        margin-left: 10px;
        white-space: nowrap;
        margin-top: 6px;
        font-size: 24px;
        color: white;
        cursor: pointer;
    }

    .nav-bar-top {
        display: flex;
    }

        .nav-bar-top img {
            height: 30px;
            width: 30px;
        }

    #dropdown {
        display: none;
        margin-top: 6px;
        margin-left: -30px;
    }

        #dropdown li:hover {
            width: 140px;
            cursor: pointer;
        }

    .arrow {
        display: none;
        position: absolute;
        top: 50%; /* Position arrow vertically in the middle */
        transform: translateY(-50%) rotate(180deg); /* Center arrow vertically */
        right: 10px; /* Adjust distance between arrow and text */
        width: 0;
        height: 0;
        border-left: 5px solid transparent; /* Adjust arrow size as needed */
        border-right: 5px solid transparent; /* Adjust arrow size as needed */
        border-bottom: 5px solid #ffffff; /* Adjust arrow color */
    }

    .main-menu li:hover .arrow {
        display: block;
        border-bottom: 5px solid #000;
        transition: 0.5s;
    }


    .main-menu li:hover {
        background: rgb(255, 255, 255);
        color: black;
        width: 200px;
        margin-left: 10px;
        border-radius: 10px;
        transition: 1.5s;
        cursor:pointer;
    }

    .rotated {
        transform: rotate(360deg);
        margin-top: -3px;
    }

    .sidebar:hover .arrow {
        display: block; /* Show the arrow when hovering over the sidebar */
    }

    .website-logo a {
        text-decoration: none;
    }

    .main-icon img {
        width: 50px;
        height: 50px;
    }

    hr{
        margin-top:5px;
    }
</style>
<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
