<script>
    function toggleOpenBtn() {
        const openbtn = document.getElementById('open');
        const closebtn = document.getElementById('close');
        const sidebar = document.getElementById('sidebar');
        const arrow = document.getElementById('arrow');
        const top = document.getElementById('nav-bar-top-text');
        const Pic = document.getElementById('Center-Pic');

        sidebar.style.width = '250px';
        arrow.style.display = 'block';
        openbtn.style.display = 'none';
        closebtn.style.display = 'block';
        top.style.display = 'block';
        Pic.style.width = "120px";
        Pic.style.height = "120px";
    }

    function toggleCloseBtn() {
        const openbtn = document.getElementById('open');
        const closebtn = document.getElementById('close');

        const sidebar = document.getElementById('sidebar');
        const arrow = document.getElementById('arrow');

        const top = document.getElementById('nav-bar-top-text');

        const Pic = document.getElementById('Center-Pic');

        sidebar.style.width = '65px';
        arrow.style.display = 'none';
        openbtn.style.display = 'block';
        closebtn.style.display = 'none';
        top.style.display = 'none';
        Pic.style.width = "50px";
        Pic.style.height = "50px";
    }

    function toggleDropdown() {
        var dropdown = document.getElementById("dropdown");
        var arrow = document.querySelector(".arrow");

        // Toggle the display of the dropdown
        dropdown.style.display = dropdown.style.display === "block" ? "none" : "block";

        // Rotate the arrow by 180 degrees
        arrow.classList.toggle("rotated");
    }
  
</script>
