    }

    .sidebar ul li {
        list-style: none;
    }

        .sidebar ul li a {
            position: relative;
            display: flex;
            white-space: nowrap;
            text-decoration: none;
        }

            .sidebar ul li a .icon {
                position: relative;
                display: flex;
                justify-content: center;
                align-items: center;
                min-width: 60px;
                height: 60px;
                font-size: 24px;
            }

            .sidebar ul li a .text {
